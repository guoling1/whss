<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jkm.hsy.user.dao.ShopSocketDao">
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO tb_shop_socket
        (
        shop_id,
        pc,
        ip,
        port,
        status
        )
        VALUES
        (
        #{shopId},
        #{pc},
        #{ip},
        #{port},
        #{status}
        );
    </insert>

    <update id="update">
        UPDATE tb_shop_socket SET ip = #{ip}, port = #{port} WHERE id = #{id}
    </update>

    <update id="updateByShopId">
        UPDATE tb_shop_socket SET ip = #{ip}, port = #{port} WHERE shop_id = #{shopId}
    </update>

    <select id="selectById" resultType="com.jkm.hsy.user.entity.ShopSocket">
        SELECT * FROM tb_shop_socket WHERE id = #{id}
    </select>

    <select id="selectByShopId" resultType="com.jkm.hsy.user.entity.ShopSocket">
        SELECT * FROM tb_shop_socket WHERE shop_id = #{shopId}
    </select>

    <select id="selectLimit1000" resultType="com.jkm.hsy.user.entity.ShopSocket">
        SELECT * FROM tb_shop_socket ORDER BY id DESC LIMIT 1000
    </select>
</mapper>