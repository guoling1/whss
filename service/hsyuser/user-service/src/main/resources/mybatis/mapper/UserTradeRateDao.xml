<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jkm.hsy.user.dao.UserTradeRateDao">

    <sql id="Base_Column_List">
        id,	user_id,policy_type,trade_rate_t1,trade_rate_d1,trade_rate_d0,is_open,status,create_time,update_time
    </sql>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO app_user_trade_rate(user_id,policy_type,trade_rate_t1,trade_rate_d1,trade_rate_d0,is_open,status)
        VALUES(#{userId},#{policyType},#{tradeRateT1},#{tradeRateD1},#{tradeRateD0},#{isOpen},#{status})
    </insert>

    <select id="selectByUserIdAndPolicyType" resultType="com.jkm.hsy.user.entity.UserTradeRate">
        SELECT
        <include refid="Base_Column_List" />
        FROM app_user_trade_rate
        WHERE user_id=#{userId} and policy_type = #{policyType} and status = 1;
    </select>
</mapper>