<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jkm.hss.dealer.dao.OemInfoDao">
    <!-- 通用查询结果列-->
    <sql id="Base_Column_List">
        id,	dealer_id,brand_name,	wechat_name,wechat_code,app_id,app_secret,logo,qr_code,status,create_time,update_time
    </sql>

    <!-- 添加 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.jkm.hss.dealer.entity.OemInfo">
        INSERT INTO tb_oem_info (
        dealer_id,
        brand_name,
        wechat_name,
        wechat_code,
        app_id,
        app_secret,
        logo,
        qr_code,
        status
        )VALUES (
        #{dealerId},
        #{brandName},
        #{wechatName},
        #{wechatCode},
        #{bankName},
        #{appId},
        #{appSecret},
        #{logo},
        #{qrCode},
        #{status}
        )
    </insert>

    <select id="selectByDealerId" resultType="com.jkm.hss.dealer.entity.OemInfo">
        SELECT <include refid="Base_Column_List" /> FROM tb_oem_info where dealer_id=#{dealerId} and status=1 limit 0,1
    </select>
</mapper>