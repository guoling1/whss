<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jkm.hss.dealer.dao.DealerUpgerdeRateDao">

    <!-- 通用查询结果列-->
    <sql id="Base_Column_List">
		 id,	product_id,type,dealer_id,	first_dealer_share_profit_rate,	second_dealer_share_profit_rate,	boss_dealer_share_rate,	status,	create_time,	update_time
	</sql>

    <!-- 添加 （匹配有值的字段）-->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO tb_dealer_upgrade_rate
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="productId != null">
                product_id,
            </if>
            <if test="type != null">
                type,
            </if>
            <if test="dealerId != null">
                dealer_id,
            </if>
            <if test="firstDealerShareProfitRate != null">
                first_dealer_share_profit_rate,
            </if>
            <if test="secondDealerShareProfitRate != null">
                second_dealer_share_profit_rate,
            </if>
            <if test="bossDealerShareRate != null">
                boss_dealer_share_rate,
            </if>
            <if test="status != null">
                status,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides="," >
            <if test="productId!=null">
                #{productId},
            </if>
            <if test="type!=null">
                #{type},
            </if>
            <if test="dealerId!=null">
                #{dealerId},
            </if>
            <if test="firstDealerShareProfitRate!=null">
                #{firstDealerShareProfitRate},
            </if>
            <if test="secondDealerShareProfitRate!=null">
                #{secondDealerShareProfitRate},
            </if>
            <if test="bossDealerShareRate!=null">
                #{bossDealerShareRate},
            </if>
            <if test="status!=null">
                #{status},
            </if>
        </trim>
    </insert>

    <!-- 修 改-->
    <update id="update">
        UPDATE tb_dealer_upgrade_rate
        <set>
            <if test="productId != null">
                product_id = #{productId},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
            <if test="dealerId != null">
                dealer_id = #{dealerId},
            </if>
            <if test="firstDealerShareProfitRate != null">
                first_dealer_share_profit_rate = #{firstDealerShareProfitRate},
            </if>
            <if test="secondDealerShareProfitRate != null">
                second_dealer_share_profit_rate = #{secondDealerShareProfitRate},
            </if>
            <if test="bossDealerShareRate != null">
                boss_dealer_share_rate = #{bossDealerShareRate},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <!-- 查询（根据主键ID查询） -->
    <select id="selectById" resultType="com.jkm.hss.dealer.entity.DealerUpgerdeRate">
        SELECT
        <include refid="Base_Column_List" />
        FROM tb_dealer_upgrade_rate
        WHERE id = #{id} and status=1
    </select>

    <!--查询所有记录-->
    <select id="selectAll" resultType="com.jkm.hss.dealer.entity.DealerUpgerdeRate">
        SELECT
        <include refid="Base_Column_List" />
        FROM tb_dealer_upgrade_rate
        WHERE status = 1;
    </select>


    <!--根据代理商id和产品id查询记录-->
    <select id="selectByDealerIdAndProductId" resultType="com.jkm.hss.dealer.entity.DealerUpgerdeRate">
        SELECT
        <include refid="Base_Column_List" />
        FROM tb_dealer_upgrade_rate
        WHERE status = 1 and dealer_id = #{dealerId} and product_id = #{productId};
    </select>
    <select id="selectByDealerIdAndTypeAndProductId" resultType="com.jkm.hss.dealer.entity.DealerUpgerdeRate">
        SELECT * FROM tb_dealer_upgerde_rate WHERE  status = 1 and dealer_id = #{dealerId} and product_id = #{productId} AND type = #{type};
    </select>

</mapper>