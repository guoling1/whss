<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jkm.hss.merchant.dao.UserInfoDao">

    <!-- 通用查询结果列-->
    <sql id="Base_Column_List">
        id,	mobile,	pwd,	open_id,role_id,merchant_id,status,	create_time,update_time
    </sql>

    <!-- 查询（根据OpenId查询） -->
    <select id="selectById" resultType="com.jkm.hss.merchant.entity.UserInfo">
        SELECT
        <include refid="Base_Column_List" />
        FROM tb_user_info
        WHERE id = #{id} and status=0
    </select>

    <!-- 查询（根据OpenId查询） -->
    <select id="selectByOpenId" resultType="com.jkm.hss.merchant.entity.UserInfo">
        SELECT
        <include refid="Base_Column_List" />
        FROM tb_user_info
        WHERE open_id = #{openId} and status=0
    </select>
    <!-- 查询（根据merchantId查询） -->
    <select id="selectByMerchantId" resultType="com.jkm.hss.merchant.entity.UserInfo">
        SELECT
        <include refid="Base_Column_List" />
        FROM tb_user_info
        WHERE merchant_id = #{merchantId} and status=0 limit 0,1
    </select>

    <!-- 添加 （匹配有值的字段）-->
    <insert id="insertUserInfo" useGeneratedKeys="true" keyProperty="id" >
        INSERT INTO tb_user_info
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="mobile != null">
                mobile,
            </if>
            <if test="pwd != null">
                pwd,
            </if>
            <if test="openId != null">
                open_id,
            </if>
            <if test="merchantId != null">
                merchant_id,
            </if>
            <if test="roleId != null">
                role_id,
            </if>
            <if test="status != null">
                status,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides="," >
            <if test="mobile!=null">
                #{mobile},
            </if>
            <if test="pwd!=null">
                #{pwd},
            </if>
            <if test="openId!=null">
                #{openId},
            </if>
            <if test="merchantId!=null">
                #{merchantId},
            </if>
            <if test="roleId!=null">
                #{roleId},
            </if>
            <if test="status!=null">
                #{status},
            </if>
        </trim>
    </insert>

    <update id="updataUserInfo">
        UPDATE tb_user_info
        SET
        merchant_id = #{merchantId},
        mobile = #{mobile}
        WHERE id = #{id}
    </update>
</mapper>